<%- include('../partials/header') %>

  <div class="container py-5 d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card" style="width: 100%; max-width: 450px;">
      <div class="card-header text-center">
        <h1 class="card-title">Login</h1>
        <p class="card-description">Enter your credentials to access your account</p>
      </div>

      <div class="card-content">
        <form action="/auth/login" method="POST">
          <div class="form-group">
            <label for="email" class="form-label">Email</label>
            <input type="email" id="email" name="email" class="form-control" placeholder="demo@example.com"
              value="<%= typeof email != 'undefined' ? email : '' %>" required>
          </div>

          <div class="form-group">
            <label for="password" class="form-label">Password</label>
            <input type="password" id="password" name="password" class="form-control" placeholder="password" required>
          </div>

          <div class="text-right mb-4">
            <a href="/auth/forgot-password" class="text-primary">Forgot password?</a>
          </div>

          <button type="submit" class="btn btn-primary btn-block">Login</button>
        </form>

        <div class="text-center mt-4">
          <p class="text-muted">
            Don't have an account?
            <a href="/auth/register" class="text-primary">Register</a>
          </p>
        </div>

        <div class="border-top mt-4 pt-4">
          <p class="text-center text-muted mb-2">Demo credentials:</p>
          <p class="text-center text-muted">Email: demo@example.com</p>
          <p class="text-center text-muted">Password: password</p>
        </div>
      </div>
    </div>
  </div>

  <%- include('../partials/footer') %>